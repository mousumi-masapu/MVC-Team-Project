@model OnlineShop.WebUI.Models.RegisterViewModel
@{
    ViewBag.Title = "Register Role";
}

<h2 class="mission margin">@ViewBag.Title.</h2>

<div class="container">
    @using (Html.BeginForm("RegisterRole", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("Select User", new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.DropDownList("UserName")
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Select Role", new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.DropDownList("Name")
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="Register Role" />
            </div>
        </div>
    }

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }


</div>